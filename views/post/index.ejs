<h1><%= data.title %></h1>
<article class="article">
    <%= data.body %>
</article>

<%- include('../post/add-comment.ejs') %>
<h3>Comments</h3>
<div class="comments">
    <% comments.forEach(comment => { %>
        <div class="comment">
            <h4><%= comment.title %></h4>
            <p><%= comment.body %></p>
        </div>
        <% }) %>
</div>
